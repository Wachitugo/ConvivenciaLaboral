# Configuración de la Aplicación
APP_NAME="Convivencia Inteligente API"
BACKEND_HOST="0.0.0.0"
BACKEND_PORT=8000
CLIENT_ORIGIN="http://localhost:3000"
# Orígenes adicionales permitidos para CORS (separados por coma)
# Ejemplo: ALLOWED_ORIGINS="https://dev.convivenciainteligente.cl,https://convivenciainteligente.cl"
ALLOWED_ORIGINS=""

# Google Cloud Platform
PROJECT_ID="tu-proyecto-id"
LOCATION="us-central1" # Región del Data Store
VERTEX_LOCATION="us-central1" # Región para ejecutar el modelo (LLM)

# Vertex AI Search (Grounding)
DATA_STORE_ID="tu-datastore-id"

# Credenciales
GOOGLE_APPLICATION_CREDENTIALS="service-account-key.json"

# Configuración del Modelo
VERTEX_MODEL="gemini-1.5-flash-001"

# Firestore
FIRESTORE_DATABASE="(default)"

# Almacenamiento (Opcional si se generan dinámicamente)
GCS_BUCKET_SESSIONS="tu-bucket-sesiones"
